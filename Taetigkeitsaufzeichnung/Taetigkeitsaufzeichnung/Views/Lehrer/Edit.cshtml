@model Taetigkeitsaufzeichnung.ViewModels.LehrerEditViewModel

@{
    ViewData["Title"] = "Lehrer bearbeiten";
}

<section id="teachers-edit-page" class="pt-3 pb-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h1 class="h5 mb-3">Lehrer bearbeiten</h1>

                        <div asp-validation-summary="All" class="validation-summary mb-3"></div>

                        <form asp-action="Edit" method="post">
                            <input type="hidden" asp-for="LehrerID" />

                            <div class="row g-3">
                                <div class="col-12 col-md-6">
                                    <label asp-for="Vorname" class="form-label">Vorname</label>
                                    <input asp-for="Vorname" class="form-control" />
                                    <span asp-validation-for="Vorname" class="text-danger small"></span>
                                </div>
                                <div class="col-12 col-md-6">
                                    <label asp-for="Nachname" class="form-label">Nachname</label>
                                    <input asp-for="Nachname" class="form-control" />
                                    <span asp-validation-for="Nachname" class="text-danger small"></span>
                                </div>
                                <div class="col-12 col-md-6">
                                    <label asp-for="Sollstunden" class="form-label">Sollstunden</label>
                                    <input asp-for="Sollstunden" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="Sollstunden" class="text-danger small"></span>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-check mt-2">
                                        <input class="form-check-input" type="checkbox" asp-for="IsActive" id="isActiveChk" />
                                        <label class="form-check-label" for="isActiveChk">Aktiv</label>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex gap-2 justify-content-end mt-3">
                                <a asp-action="List" class="btn btn-outline-secondary">Abbrechen</a>
                                <button type="submit" class="btn btn-htl">Speichern</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
