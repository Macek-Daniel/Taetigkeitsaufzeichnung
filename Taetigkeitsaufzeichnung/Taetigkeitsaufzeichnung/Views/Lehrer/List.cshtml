@model Taetigkeitsaufzeichnung.ViewModels.LehrerDashboardViewModel

@{
    ViewData["Title"] = "Lehrer Übersicht";
}

<section id="teachers-page" class="pt-3 pb-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-10">

                <div class="row g-3 mb-3">
                    <div class="col-12 col-md-4">
                        <div class="card h-100">
                            <div class="card-body d-flex align-items-center justify-content-center">
                                <div class="text-center">
                                    <div class="fw-semibold">Insgesamt fehlend</div>
                                    <div class="display-6">@Model.GesamtFehlend.ToString("0.##") h</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="card h-100">
                            <div class="card-body d-flex align-items-center justify-content-center">
                                <div class="text-center">
                                    <div class="fw-semibold">Erreicht</div>
                                    <div class="display-6">@Model.AnzahlLehrerErreicht/@Model.AnzahlLehrerGesamt</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="card h-100">
                            <div class="card-body d-flex align-items-center justify-content-center">
                                <div class="text-center">
                                    <div class="fw-semibold">Status</div>
                                    <span class="badge @((Model.AnzahlLehrerErreicht == Model.AnzahlLehrerGesamt && Model.AnzahlLehrerGesamt>0) ? "badge-active" : "badge-inactive")">
                                        @(Model.AnzahlLehrerErreicht == Model.AnzahlLehrerGesamt && Model.AnzahlLehrerGesamt>0 ? "Fertig" : "Offen")
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h2 class="h5 mb-0">Lehrer</h2>
                    <div class="d-flex gap-2">
                        <form method="get" asp-action="List" class="d-flex align-items-center gap-2">
                            <select name="statusFilter" class="form-select form-select-sm" onchange="this.form.submit()">
                                <option value="active" selected="@(ViewData["StatusFilter"]?.ToString() == "active" ? "selected" : null)">Nur Aktive</option>
                                <option value="inactive" selected="@(ViewData["StatusFilter"]?.ToString() == "inactive" ? "selected" : null)">Nur Inaktive</option>
                                <option value="all" selected="@(ViewData["StatusFilter"]?.ToString() == "all" ? "selected" : null)">Alle</option>
                            </select>
                        </form>
                        <a asp-action="Create" class="btn btn-htl btn-sm">Neuer Lehrer</a>
                    </div>
                </div>

                <div class="table-responsive">
                    <table id="teachers-table" class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Lehrername</th>
                                <th class="text-center">Erreichte Stunden</th>
                                <th class="text-center">Sollstunden</th>
                                <th class="text-center">Fortschritt</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Abteilungsvorstände</th>
                                <th class="text-end">Aktionen</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var lehrer in Model.LehrerListe)
                        {
                            var prozent = lehrer.Sollstunden > 0 ? Math.Clamp((lehrer.IstStunden / lehrer.Sollstunden) * 100, 0, 100) : 0;
                            <tr>
                                <td>@lehrer.FullName</td>
                                <td class="text-center">@lehrer.IstStunden.ToString("0.##")</td>
                                <td class="text-center">@lehrer.Sollstunden.ToString("0.##")</td>
                                <td class="text-center" style="min-width:160px;">
                                    <div class="progress" role="progressbar" aria-valuenow="@prozent.ToString("0")" aria-valuemin="0" aria-valuemax="100">
                                        <div class="progress-bar @((prozent>=100)?"bg-success":"")" style="width:@prozent.ToString("0")%"></div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge @(lehrer.IsActive ? "badge-active" : "badge-inactive")">@(lehrer.IsActive ? "Aktiv" : "Inaktiv")</span>
                                </td>
                                <td class="text-center">@lehrer.AnzahlAbteilungsvorstaende</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@lehrer.LehrerID" class="btn btn-sm btn-outline-secondary">Bearbeiten</a>
                                        <form asp-action="ToggleActivity" asp-route-id="@lehrer.LehrerID" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-primary">Aktiv/Inaktiv</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}