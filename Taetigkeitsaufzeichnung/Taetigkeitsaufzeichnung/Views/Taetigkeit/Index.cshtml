@model Taetigkeitsaufzeichnung.ViewModels.TaetigkeitDashboardViewModel

@{
    ViewData["Title"] = "Tätigkeitsaufzeichnung";
}

<section id="activity-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <section id="activity-creation-form" class="mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h2 class="h5 mb-3">Neue Tätigkeit erfassen</h2>

                            <div asp-validation-summary="All" class="validation-summary mb-3"></div>

                            <form asp-action="Create" method="post">
                                <!-- Lehrer wird automatisch aus Azure AD gesetzt -->
                                <input type="hidden" asp-for="NeueTaetigkeit.LehrerID" />

                                <div class="row g-3">
                                    <div class="col-12 col-sm-6 col-lg-3">
                                        <label asp-for="NeueTaetigkeit.Datum" class="form-label">Datum</label>
                                        <input asp-for="NeueTaetigkeit.Datum" type="date" class="form-control" />
                                        <span asp-validation-for="NeueTaetigkeit.Datum" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12 col-lg-3">
                                        <label asp-for="NeueTaetigkeit.ProjektID" class="form-label">Projekt</label>
                                        <div class="input-group">
                                            <select asp-for="NeueTaetigkeit.ProjektID" asp-items="Model.ProjektListe" class="form-select" id="projektSelect">
                                                <option value="">Projekt...</option>
                                            </select>
                                            <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#newProjektModal" title="Neues Projekt erstellen">
                                                +
                                            </button>
                                        </div>
                                        <span asp-validation-for="NeueTaetigkeit.ProjektID" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12 col-lg-2">
                                        <label asp-for="NeueTaetigkeit.DauerStunden" class="form-label">Dauer (h)</label>
                                        <input asp-for="NeueTaetigkeit.DauerStunden" type="text" placeholder="z.B. 1,5" class="form-control" />
                                        <span asp-validation-for="NeueTaetigkeit.DauerStunden" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12">
                                        <label asp-for="NeueTaetigkeit.Beschreibung" class="form-label">Tätigkeit</label>
                                        <input asp-for="NeueTaetigkeit.Beschreibung" placeholder="Beschreibung..." class="form-control" />
                                        <span asp-validation-for="NeueTaetigkeit.Beschreibung" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-end mt-3">
                                    <button type="submit" class="btn btn-htl px-4">Hinzufügen</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>

                <section id="history-section">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <h3 class="h5 mb-0">Historie</h3>
                    </div>
                    <div class="table-responsive">
                        <table id="history-table" class="table table-striped table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Datum</th>
                                    <th scope="col">Lehrer</th>
                                    <th scope="col">Tätigkeit</th>
                                    <th scope="col">Projekt</th>
                                    <th scope="col" class="text-center">Dauer</th>
                                    <th scope="col" class="text-center"></th>
                                </tr>
                            </thead>
                            <tbody>
                            @if (Model.Historie != null && Model.Historie.Any())
                            {
                                foreach (var item in Model.Historie)
                                {
                                    <tr>
                                        <td>@item.Datum.ToString("d")</td>
                                        <td>@item.LehrerName</td>
                                        <td>@item.Beschreibung</td>
                                        <td>@item.ProjektName</td>
                                        <td class="text-center">@item.DauerStunden.ToString("0.##") h</td>
                                        <td class="text-center">
                                            <form asp-action="Delete" asp-route-id="@item.TaetigkeitID" method="post" onsubmit="return confirm('Löschen?');" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Löschen">X</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center text-muted">Keine Einträge.</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        document.getElementById('newProjektBtn')?.addEventListener('click', async function() {
            const projektName = document.getElementById('projektNameInput').value;
            
            if (!projektName.trim()) {
                alert('Bitte geben Sie einen Projektnamen ein.');
                return;
            }
            
            try {
                const response = await fetch('/Taetigkeit/CreateProjekt', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    },
                    body: JSON.stringify({ projektname: projektName })
                });
                
                if (response.ok) {
                    const data = await response.json();
                    
                    // Füge das neue Projekt zum Dropdown hinzu
                    const select = document.getElementById('projektSelect');
                    const option = document.createElement('option');
                    option.value = data.projektID;
                    option.textContent = data.projektname;
                    select.appendChild(option);
                    
                    // Setze das neue Projekt als ausgewählt
                    select.value = data.projektID;
                    
                    // Schließe das Modal
                    bootstrap.Modal.getInstance(document.getElementById('newProjektModal')).hide();
                    
                    // Leere das Inputfeld
                    document.getElementById('projektNameInput').value = '';
                } else {
                    alert('Fehler beim Erstellen des Projekts.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Ein Fehler ist aufgetreten.');
            }
        });
    </script>
}

<!-- Modal für neues Projekt -->
<div class="modal fade" id="newProjektModal" tabindex="-1" aria-labelledby="newProjektModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newProjektModalLabel">Neues Projekt erstellen</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Schließen"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="projektNameInput" class="form-label">Projektname</label>
                    <input type="text" class="form-control" id="projektNameInput" placeholder="z.B. Neue Initiative">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                <button type="button" class="btn btn-htl" id="newProjektBtn">Erstellen</button>
            </div>
        </div>
    </div>
</div>