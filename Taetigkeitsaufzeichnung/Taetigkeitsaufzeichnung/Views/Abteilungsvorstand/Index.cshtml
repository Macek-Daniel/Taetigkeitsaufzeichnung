@model IEnumerable<Taetigkeitsaufzeichnung.Models.Abteilungsvorstand>

@{
    ViewData["Title"] = "Abteilungsvorstände";
}

<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h5 mb-0">Abteilungsvorstände</h2>
        <a asp-action="Create" class="btn btn-htl btn-sm">Neu</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead class="table-light">
            <tr>
                <th>Abteilung</th>
                <th>Lehrer</th>
                <th>Start</th>
                <th>Ende</th>
                <th class="text-end">Aktionen</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var v in Model)
            {
                <tr>
                    <td>@v.Abteilung?.Name</td>
                    <td>@(v.Lehrer != null ? v.Lehrer.Vorname + " " + v.Lehrer.Nachname : "")</td>
                    <td>@(v.StartDatum?.ToString("yyyy-MM-dd"))</td>
                    <td>@(v.EndDatum?.ToString("yyyy-MM-dd"))</td>
                    <td class="text-end">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@v.AbteilungsvorstandID" class="btn btn-sm btn-outline-secondary">Bearbeiten</a>
                            <form asp-action="Delete" asp-route-id="@v.AbteilungsvorstandID" method="post" class="d-inline" onsubmit="return confirm('Diesen Eintrag löschen?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Löschen</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
