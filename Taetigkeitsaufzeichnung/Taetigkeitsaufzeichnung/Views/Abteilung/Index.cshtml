@model IEnumerable<Taetigkeitsaufzeichnung.Models.Abteilung>

@{
    ViewData["Title"] = "Abteilungen";
}

<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h5 mb-0">Abteilungen</h2>
        <a asp-action="Create" class="btn btn-htl btn-sm">Neue Abteilung</a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Kürzel</th>
                <th class="text-center">Status</th>
                <th class="text-end">Aktionen</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.Name</td>
                    <td>@a.Kuerzel</td>
                    <td class="text-center">
                        <span class="badge @(a.IsActive ? "badge-active" : "badge-inactive")">@(a.IsActive ? "Aktiv" : "Inaktiv")</span>
                    </td>
                    <td class="text-end">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@a.AbteilungID" class="btn btn-sm btn-outline-secondary">Bearbeiten</a>
                            <form asp-action="Delete" asp-route-id="@a.AbteilungID" method="post" class="d-inline" onsubmit="return confirm('Diese Abteilung löschen?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Löschen</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
